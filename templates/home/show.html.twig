{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block body %}
    <div class="container">
        <div class="d-flex flex-row justify-content-between align-items-center gap-1 mx-auto mb-2">
            <h3 class="text-secondary">Numéro de fiche: <span class="text-primary">{{ data.numeroFiche }}</span></h3>
            <a href="{{ path('home') }}"  type="button" class="btn btn-outline-secondary btn-sm">retour</a>
        </div>
        <hr>
        <div class="border mx-auto p-4 shadow mb-5 bg-body rounded">
            <form class="row g-3 needs-validation" novalidate>
                <div class="col-md-4">
                    <label for="validationCustom01" class="form-label">Civiliter</label>
                    <input type="text" class="form-control" id="validationCustom01" value="{{ data.civilite }}" disabled
                           required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom01" class="form-label">Nom</label>
                    <input type="text" class="form-control" id="validationCustom01" value="{{ data.nom }}" disabled
                           required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom02" class="form-label">Prenom</label>
                    <input type="text" class="form-control" id="validationCustom02" value="{{ data.prenom }}" disabled
                           required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustomUsername" class="form-label">Email</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text" id="inputGroupPrepend">@</span>
                        <input type="text" class="form-control" id="validationCustomUsername"
                               aria-describedby="inputGroupPrepend" value="{{ data.emailP1 }}" disabled required>
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Ville</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.ville }}" disabled
                           required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Code Postal</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.codePostal }}"
                           disabled required>
                </div>
                <hr>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Compte Affaire</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.compteAffaire }}"
                           disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Compte évènement (Veh)</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.compteEvenement }}"
                           disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Compte dernier évènement (Veh)</label>
                    <input type="text" class="form-control" id="validationCustom03"
                           value="{{ data.compteDernierEvenement }}" disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Propriétaire actuel du véhicule</label>
                    <input type="text" class="form-control" id="validationCustom03"
                           value="{{ data.proprietaireVehicule }}" disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Date achat (date de livraison)</label>
                    <input type="text" class="form-control" id="validationCustom03"
                           value="{{ data.dateAchat ? data.dateAchat.format('d/m/Y') : '' }}" disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Date de mise en circulation</label>
                    <input type="text" class="form-control" id="validationCustom03"
                           value="{{ data.dateMiseCirculation ? data.dateMiseCirculation.format('d/m/Y') : '' }}"
                           disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Libellé marque (Mrq)</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.marque }}" disabled
                           required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Libellé modèle (Mod)</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.modele }}" disabled
                           required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Immatriculation</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.immatriculation }}"
                           disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Kilométrage</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.kilometrage }}"
                           disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Libellé énergie (Energ)</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.energie }}"
                           disabled required>
                </div>
                <hr>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Type de prospect</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.typeProspect }}"
                           disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Vendeur VN</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.vendeurVN }}"
                           disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Vendeur VO</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.vendeurVo }}"
                           disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Commentaire de facturation (Veh)</label>
                    <input type="text" class="form-control" id="validationCustom03"
                           value="{{ data.commentaireFacture }}"
                           disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Type VN VO</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.typeVNVO }}"
                           disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Numéro de dossier VN VO</label>
                    <input type="text" class="form-control" id="validationCustom03" value="{{ data.numeroDossierVNVO }}"
                           disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Intermediaire de vente VN</label>
                    <input type="text" class="form-control" id="validationCustom03"
                           value="{{ data.intermadiareVenteVN }}"
                           disabled required>
                </div>
                <div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Date évènement (Veh)</label>
                    <input type="text" class="form-control" id="validationCustom03"
                           value="{{ data.dateEvenement ? data.dateEvenement.format('d/m/Y') : '' }}"
                           disabled required>
                </div><div class="col-md-4">
                    <label for="validationCustom03" class="form-label">Origine évènement (Veh)</label>
                    <input type="text" class="form-control" id="validationCustom03"
                           value="{{ data.origineEvenement }}"
                           disabled required>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
